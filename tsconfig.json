{
    "$schema": "https://raw.githubusercontent.com/TypeScriptToLua/TypeScriptToLua/master/tsconfig-schema.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": ["ESNext"],
        "moduleResolution": "Node",
        "types": ["lua-types/5.3"],
        "sourceMap": true,
        "outDir": "Lua",

        /* Strictness */
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitOverride": true,
        "noImplicitAny": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": true
    },
    "tstl": {
        "luaTarget": "5.3",
        "buildMode": "library",
        "noImplicitSelf": true
    },
    "include": ["cheat-engine.d.ts", "Common/**.ts", "Divine Divinity/**.ts"]
}
